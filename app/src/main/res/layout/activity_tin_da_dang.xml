<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uytai.farmersp.mvp.tindadang.TinDaDangActivity">
    <include
        android:id="@+id/bar_tindadang"
        layout="@layout/app_bar_layout" />
    <android.support.v7.widget.RecyclerView
        android:layout_margin="5dp"
        android:id="@+id/recyclerviewTinDaDang"
        android:layout_below="@+id/bar_tindadang"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <FrameLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/float_tdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:color/transparent" />

        <TextView
            android:id="@+id/count_tdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableTop="@drawable/plus"
            android:text="2"
            android:elevation="16dp"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </FrameLayout>
</RelativeLayout>
