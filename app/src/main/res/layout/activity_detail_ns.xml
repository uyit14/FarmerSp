<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/bar_detail"
        layout="@layout/app_bar_layout"
        />
    <LinearLayout
        android:layout_below="@+id/bar_detail"
        android:background="@drawable/custom_trader_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar_nd"
                    android:src="@drawable/avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tenns_ns_detail"
                        android:layout_marginTop="5dp"
                        android:gravity="left|center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="@string/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/startdate_ns_detail"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:text="22 Feb 2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/enddate_ns_detail"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:text="25 Feb 2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_people"
                        android:layout_width="25dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/name_detail"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:text="Bao Uy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_phone"
                        android:layout_width="25dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/sdt_detail"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/icon_click"
                        android:text="01657988994"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_place"
                android:layout_width="25dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/diachi_detail"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:text="08 Huu Nghi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/description_detail"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:maxLines="2"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:text="Need to buy some thing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/logo_design"
                android:id="@+id/hinhanh_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>