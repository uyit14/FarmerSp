<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="3dp"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/bar_detail"
        layout="@layout/app_bar_layout"
        />
    <LinearLayout
        android:layout_below="@+id/bar_detail"
        android:background="@drawable/custom_trader_item"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_weight="2"
                    android:src="@drawable/avatar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/name"
                        android:layout_marginTop="5dp"
                        android:layout_weight="4"
                        android:gravity="left|center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:text="@string/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_calendar"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/date"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:text="22 Feb 2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_place"
                            android:layout_width="25dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:id="@+id/noithumua"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:text="ĐB. SCL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_gravity="center"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/clickrating"
                android:layout_gravity="center"
                android:src="@drawable/icon_click"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:gravity="left|center_vertical"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="left|center_vertical"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Liên hệ: "
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lienhe"
                    android:gravity="left|center_vertical"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:text="01657988994"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sdt_detail"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:text="Liên hệ ngay"
                    android:drawableRight="@drawable/ic_phone"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="left|center_vertical"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:text="Giá thu mua: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/giathap"
                    android:gravity="left|center_vertical"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:text="40000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="left|center_vertical"
                        android:textSize="17sp"
                        android:text="  -  "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/giacao"
                        android:gravity="left|center_vertical"
                        android:textSize="17sp"
                        android:textStyle="italic"
                        android:text="70000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/description"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:textSize="16sp"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:text="Need to buy some thing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="@color/background"/>
        <LinearLayout
            android:gravity="top"
            android:layout_margin="5dp"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/img_buy"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>