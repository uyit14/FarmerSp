<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/custom_trader_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="top|center"
                android:layout_weight="1"
                android:id="@+id/tenns_detail_trader"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorMain"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Ten Nong San"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/noithumua_detail_trader"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:layout_gravity="left|center"
                android:text="08 Hữu Nghị, Bình Thọ"
                android:textStyle="italic"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_weight="1"
                android:id="@+id/viewdetail_detail_trader"
                android:layout_gravity="center"
                android:src="@drawable/icon_edit"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_calendar"
                android:layout_width="70px"
                android:layout_height="70px" />
            <TextView
                android:id="@+id/date_detail_trader"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="22 Feb 2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_phone"
                android:layout_width="70px"
                android:layout_height="70px" />
            <TextView
                android:id="@+id/sdt_detail_trader"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="SDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>